<div class="container">
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">Update Pharmacy Information</h1>
    </div>

    <div class="alert alert-danger alert-dismissible fade show mt-2" style="display: none;" id="alert" role="alert">
      <strong id="errormsg"></strong>
  </div>


    <form >
      <br>
       
      <div class="form-group">
        <label for="pharmacy">Pharmacy Name</label>
        <input type="text" class="form-control" name="pharmacy" id="pharmacy" value="<%= pharmacy.name %>">
      </div>

      <br>

      <div class="row">
        <div class="form-group col-md-4">
          <label for="insta">Instagram Account</label>
          <input type="text" class="form-control" name="insta" id="insta" value="<%= pharmacy.instaAccount %>">
        </div>
        <div class="form-group col-md-4">
          <label for="twitter">Twitter Account</label>
          <input type="text" class="form-control" name="twitter" id="twitter" value="<%= pharmacy.twitterAccount %>">
        </div>
        <div class="row col-md-4">
          <div class="form-group col-md-6">
            <label for="logo">Pharmacy Logo</label>
            <input type="file" class="form-control-file" name="logo" id="logo" onchange="loadImage(event)">
            <input type="hidden" name="oldLogo" id="oldLogo" value="<%= pharmacy.pic %>">
          </div>
          <div class="form-group col-md-6 text-center" style="height: 62px;">
            <img id="previewLogo" style="height: 100%;" src="<%= pharmacy.pic %>">
          </div>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="form-group col-md-6">
          <label for="drName">Doctor Name</label>
          <input type="text" class="form-control" name="drName" id="drName" value="<%= account.name %>">
        </div>
        <div class="form-group col-md-6">
          <label for="phone">Phone Number</label>
          <input type="number" class="form-control" name="phone" id="phone" value=<%= account.phone %> >
        </div>
      </div>
      
      <br><br>
       
      <div class="row">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-4">
          <button type="button" class="btn btn-primary col-md-6" style="width: 100%;" id="submitUpdatePharmacy" value="<%= accountID %> <%= account.pharmacyID %>">Update Pharmacy</button>
        </div>
        <div class="form-group col-md-4">
        </div>
      </div>

      
    </form>


    
</div>
       
      

<script>

var loadImage = function(event) {
    var previewLogo = document.getElementById('previewLogo');
    previewLogo.src = URL.createObjectURL(event.target.files[0]);
    previewLogo.onload = function() {
      URL.revokeObjectURL(previewLogo.src) // free memory
      document.getElementById('oldLogo').value = "";

    }
  };


</script>




