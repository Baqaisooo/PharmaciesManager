    <form >
      <br>
      <div class="row">
        <div class="form-group col-md-6">
          <label for="email">Email</label>
          <input type="email" class="form-control" name="email" id="email" placeholder="Email">
        </div>
        <div class="form-group col-md-6">
          <label for="password">Password</label>
          <input type="password" class="form-control" name="password" id="password" placeholder="Password">
        </div>
      </div>

      <br>
       
      <div class="form-group">
        <label for="pharmacy">Pharmacy Name</label>
        <input type="text" class="form-control" name="pharmacy" id="pharmacy">
      </div>

      <br>

      <div class="row">
        <div class="form-group col-md-4">
          <label for="insta">Instagram Account</label>
          <input type="text" class="form-control" name="insta" id="insta">
        </div>
        <div class="form-group col-md-4">
          <label for="twitter">Twitter Account</label>
          <input type="text" class="form-control" name="twitter" id="twitter">
        </div>
        <div class="row col-md-4">
          <div class="form-group col-md-6">
            <label for="logo">Pharmacy Logo</label>
            <input type="file" class="form-control-file" name="logo" id="logo" onchange="loadImage(event)">
          </div>
          <div class="form-group col-md-6 text-center" style="height: 62px;">
            <img id="previewLogo" style="height: 100%;">
          </div>
        </div>
      </div>

      <br>

      <div class="row">
        <div class="form-group col-md-6">
          <label for="drName">Doctor Name</label>
          <input type="text" class="form-control" name="drName" id="drName">
        </div>
        <div class="form-group col-md-6">
          <label for="phone">Phone Number</label>
          <input type="number" class="form-control" name="phone" id="phone">
        </div>
      </div>
      
      <br><br>
      
      <div class="row">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-4">
