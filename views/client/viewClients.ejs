</nav>

<div class="container">
    <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
        <h1 class="display-4">All Clients</h1>
    </div>



    <%
      var counter = 1; 
      for (const clientkey in clients) {
     
        const element = clients[clientkey];
        if (element.active) {
        %>
          <div class="row border border-success rounded mb-1">

              <div class="col-md-1 align-self-md-center">
                <h5><%=counter++%></h5>
              </div>
              <div class="col-md-4 align-self-md-center" style="border-left: black 2px solid;">
                <div class="row">
                  <div class="col-md-12">
                    <strong> Name : </strong> <%= element.name %>
                  </div>
                  <div class="col-md-12">
                    <strong> E-mail : </strong> <%= element.email %>
                    
                  </div>
                  
                </div>
              </div>

              <div class="col-md-3 align-self-md-center">
                <div class="row">
                  <div class="col-md-12">
                    <strong> Phone : </strong> <%= element.phone %>
                  </div>
                  <div class="col-md-12">
                    <strong> ID # : </strong> <%= element.ID_number %>
                    
                  </div>
                  
                </div>
              </div>
              
              <div class="col-md-4 align-self-md-center">
                  <div class="row">
                      <div class="col-md-6">
                          <a type="button" class="btn btn-warning w-100" id="edit" href="/client/updateClient/<%= clientkey %>">Update</a>
                      </div>
                      <div class="col-md-6">
                          <a type="button" class="btn btn-danger w-100"  id="delete" href="/client/deleteClient/<%= clientkey %>">Delete</a>
                      </div>
                  </div>
              </div>
          </div>
        
        <%
        }
      } { %>
    
    <% } %>
     
        


    
</div>
       

      
  </body>
