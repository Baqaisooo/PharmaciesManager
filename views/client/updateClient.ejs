    </div>

    <div class="alert alert-danger alert-dismissible fade show mt-2" style="display: none;" id="alert" role="alert">
      <strong id="errormsg"></strong>
  </div>


    <form >
      <br>
      
      <div class="row">
        <div class="form-group col-md-12">
          <label for="name">Client Name</label>
          <input type="text" class="form-control" name="name" id="name" value="<%= account.name %>">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-12">
          <label for="phone">Phone Number</label>
          <input type="number" class="form-control" name="phone" id="phone" value="<%= account.phone %>">
        </div>
      </div>
      <div class="row">
        <div class="form-group col-md-12">
          <label for="ID_number">ID Number</label>
          <input type="number" class="form-control" name="ID_number" id="ID_number" value="<%= account.ID_number %>">
        </div>
      </div>

      
      <br><br>
      
      <div class="row">
        <div class="form-group col-md-4">
        </div>
        <div class="form-group col-md-4">
          <button type="button" class="btn btn-primary col-md-6" style="width: 100%;" id="submitUpdatedClient" value="<%= accountID %>">Update Client</button>
          
        </div>
        <div class="form-group col-md-4">
        </div>
      </div>

      
    </form>


    
